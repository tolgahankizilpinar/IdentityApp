@model AppRole

<h2>Edit Role</h2>
<hr>

<form asp-action="Edit" method="post">
    <div asp-validation-summary="All" class="text-danger"></div>
    <input name="Id" value="@Model.Id" type="hidden">

    <div class="mb-3">
        <label asp-for="Name" class="form-label"></label>
        <input asp-for="Name" class="form-control">
    </div>

    <button type="submit" class="btn btn-primary my-3">Kaydet</button>
</form>


<hr>
<table class="table table-sm table-bordered">
    <thead>
        <tr>
            <th>Id</th>
            <th>Name</th>
            <th>Email</th>
            <th style="width: 80px;"></th>
        </tr>
    </thead>
    <tbody>
        @if (ViewBag.Users != null)
        {
            @if (ViewBag.Users.Count == 0)
            {
                <tr>
                    <td colspan="4" class="text-center">User Yok</td>
                </tr>
            }
            @foreach (var item in ViewBag.Users)
            {
                <tr>
                    <td>@item.Id</td>
                    <td>@item.FullName</td>
                    <td>@item.Email</td>
                    <td>
                        <a asp-controller="Users" asp-action="Edit" asp-route-id="@item.Id" class="btn btn-sm btn-primary">Edit</a>                      
                    </td>
                </tr>
            }
        }
    </tbody>
</table>